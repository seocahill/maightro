<% @timetables.each do |timetable| %>
  <p class="text-gray-700 mb-8">
    <% if @default_scenario != "Option1" %>
      <b>Please note that you are viewing a simulated timetable</b>. See <a class="text-blue-500 hover:text-blue-700" href="/articles/about.html#how-it-works">this page</a> for more details.
    <% end %>
    Showing results for trains from <%= @from %>  to <%= @to %> on <%= @default_date %>
  </p>
  <div class="hidden sm:block">
    <table class="w-full text-left border-collapse">
      <thead class="font-semibold text-gray-700">
        <tr>
          <th class="px-6 py-4 border-b border-gray-200">Departure Time</th>
          <th class="px-6 py-4 border-b border-gray-200">Arrival Time</th>
          <th class="px-6 py-4 border-b border-gray-200">Price</th>
          <th class="px-6 py-4 border-b border-gray-200">Duration</th>
          <th class="px-6 py-4 border-b border-gray-200"></th>
        </tr>
      </thead>
      <tbody class="text-gray-700" id="results">
        <% timetable.each do |row| %>
          <tr class="hover:bg-gray-100 transition-all duration-300">
            <td class="px-6 py-4 border-b border-gray-200"><%= row[2] %></td>
            <td class="px-6 py-4 border-b border-gray-200"><%= row[3] %></td>
            <td class="px-6 py-4 border-b border-gray-200"><%= row[4] %></td>
            <td class="px-6 py-4 border-b border-gray-200"><%= row[5] %></td>
            <% if (row[-1] =~ /(^(C|R)-\d)/) %>
              <td class="px-6 py-4 border-b border-gray-200"><a class="text-blue-500 hover:text-blue-700" href='<%= @booking_url %>' target="_blank"> Book üéü </a></td>
            <% else %>
              <td class="px-6 py-4 border-b border-gray-200"><a href="https://www.oireachtas.ie/en/members/tds/?tab=constituency&constituency=%2Fie%2Foireachtas%2Fhouse%2Fdail%2F33%2Fconstituency%2FMayo" target="_blank" class="text-blue-500 hover:text-blue-700"> Ask üôè </a></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="block sm:hidden">
    <div class="border-b border-gray-300 py-2 px-4 flex items-center justify-between">
      <h3 class="text-lg font-semibold text-gray-900 w-1/3">Dep</h3>
      <p class="text-gray-900 font-semibold w-1/3 text-center">Arr</p>
      <p class="text-gray-900 font-semibold w-1/3 text-center">Price</p>
      <p class="text-gray-900 font-semibold w-1/3 text-center">Length</p>
      <p class="text-gray-900 font-semibold w-1/3 text-center"></p>
    </div>
    <% timetable.each do |row| %>
      <div class="border-b border-gray-300 py-2 px-4 flex items-center justify-between">
        <p class="text-gray-600 font-semibold w-1/3"><%= row[2] %></p>
        <p class="text-gray-600 font-semibold w-1/3"><%= row[3] %></p>
        <p class="text-gray-600 font-semibold w-1/3"><%= row[4] %></p>
        <p class="text-gray-600 font-semibold w-1/3"><%= row[5] %></p>
        <% if (row[-1] =~ /(^(C|R)-\d)/) %>
          <p class="text-blue-500 hover:text-blue-700 font-semibold"><a class="text-blue-500 hover:text-blue-700" href='<%= @booking_url %>' target="_blank">Book</a></p>
        <% else %>
          <p class="text-blue-500 hover:text-blue-700 font-semibold"><a href="https://www.oireachtas.ie/en/members/tds/?tab=constituency&constituency=%2Fie%2Foireachtas%2Fhouse%2Fdail%2F33%2Fconstituency%2FMayo" target="_blank" class="text-blue-500 hover:text-blue-700">N/A</a></p>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
