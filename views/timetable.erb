<% @timetables.each do |timetable| %>
  <div class="hidden sm:block relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full max-w-4xl mx-auto text-sm text-left text-green-100 dark:text-green-100">
      <caption class="p-5 text-lg font-semibold text-left bg-green-400 dark:text-white dark:bg-gray-800">
        <% if @default_scenario != "Option1" %>
          <p class="mt-1 font-bold text-white dark:text-gray-400">Please note that you are viewing a simulated timetable</p>
        <% else %>
          <p class="mt-1 font-bold text-white dark:text-gray-400">Trains</p>
        <% end %>
      </caption>
      <thead class="text-xs text-white uppercase bg-green-600 dark:text-white">
        <tr>
          <th scope="col" class="px-6 py-3">Departure Time</th>
          <th scope="col" class="px-6 py-3">Arrival Time</th>
          <th scope="col" class="px-6 py-3">Price</th>
          <th scope="col" class="px-6 py-3">Duration</th>
          <th scope="col" class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody id="results">
        <% timetable.each do |row| %>
          <tr class="bg-green-500 border-b border-green-400">
            <td class="px-6 py-4"><%= row[2] %></td>
            <td class="px-6 py-4"><%= row[3] %></td>
            <td class="px-6 py-4"><%= row[4] %></td>
            <td class="px-6 py-4"><%= row[5] %></td>
            <% if (row[-1] =~ /(^(C|R)-\d)/) %>
              <td class="px-6 py-4">
                <a class="relative inline-flex items-center justify-center p-0.5 mb-2 mr-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800" href='<%= @booking_url %>' target="_blank">
                  <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">Book</span>
                </a>
              </td>
            <% else %>
              <td class="px-6 py-4">
                 <a class="relative inline-flex items-center justify-center p-0.5 mb-2 mr-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800" href="/articles/about.html#how-it-works" target="_blank">
                  <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">Info</span>
                </a>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="block sm:hidden text-sm text-left text-green-100 dark:text-green-100">
    <div class="border-b border-gray-300 py-2 px-4 flex items-center justify-between text-xs text-white uppercase bg-green-600 dark:text-white">
      <h3 class="text-gray-900 font-semibold w-1/3 text-center">Dep</h3>
      <p class="text-gray-900 font-semibold w-1/3 text-center">Arr</p>
      <p class="text-gray-900 font-semibold w-1/3 text-center">Price</p>
      <p class="text-gray-900 font-semibold w-1/3 text-center">Length</p>
    </div>
    <% timetable.each do |row| %>
      <% if (row[-1] =~ /(^(C|R)-\d)/) %>
        <a href='<%= @booking_url %>' target="_blank">
      <% else %>
        <a href="/articles/about.html#how-it-works" target="_blank">
      <% end %>
          <div class="border-b border-gray-300 py-2 px-4 flex items-center justify-between bg-green-500 border-b border-green-400">
            <p class="text-gray-600 font-semibold w-1/3"><%= row[2] %></p>
            <p class="text-gray-600 font-semibold w-1/3"><%= row[3] %></p>
            <p class="text-gray-600 font-semibold w-1/3"><%= row[4] %></p>
            <p class="text-gray-600 font-semibold w-1/3"><%= row[5] %></p>
          </div>
        </a>
    <% end %>
  </div>
<% end %>
