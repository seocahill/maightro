<div class="mt-5 md:col-span-2 md:mt-0">
<form method="GET" action="/">
  <div class="overflow-hidden shadow sm:rounded-md">
    <div class="space-y-6 bg-white px-4 py-5 sm:p-6">
      <div class="overflow-hidden shadow sm:rounded-md">
        <div class="bg-white px-4 py-5 sm:p-6">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-6 sm:col-span-3">
              <label for="date" class="block text-sm font-medium text-gray-700">Date of departure</label>
              <input type="date" name="date" id="first-name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
            </div>
          </div>
        </div>
      </div>
      <fieldset>
        <legend class="contents text-base font-medium text-gray-900">Pick your flavour</legend>
        <p class="text-sm text-gray-500">Design your own Maightró.</p>
        <div class="mt-4 space-y-4">
          <div class="flex items-center">
            <input id="push-everything" name="push-notifications" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="push-everything" class="ml-3 block text-sm font-medium text-gray-700">Vanilla</label>
          </div>
          <div class="flex items-center">
            <input id="push-email" name="push-notifications" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="push-email" class="ml-3 block text-sm font-medium text-gray-700">Usable</label>
          </div>
          <div class="flex items-center">
            <input id="push-nothing" name="push-notifications" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="push-nothing" class="ml-3 block text-sm font-medium text-gray-700">Direct</label>
          </div>
          <div class="flex items-center">
            <input id="push-nothing" name="push-notifications" type="radio" class="h-4 w-4 border-gray-300 text-indigo-600 focus:ring-indigo-500">
            <label for="push-nothing" class="ml-3 block text-sm font-medium text-gray-700">The full Maightró</label>
          </div>
        </div>
      </fieldset>
    </div>
    <div class="bg-gray-50 px-4 py-3 text-right sm:px-6">
      <button type="submit" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Generate</button>
    </div>
  </div>
</form>
</div>
